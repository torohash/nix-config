{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "oh-my-opencode"
  ],
  "instructions": ["AGENTS.md"],
  "theme": "system",
  "tui": {
    "scroll_speed": 1,
    "scroll_acceleration": {
      "enabled": true
    },
    "diff_style": "auto"
  },
  "permission": {
    "bash": {
      "*": "allow",
      "rm -rf *": "deny",
      "git push --force*": "deny",
      "sudo *": "deny",
      "dd *": "deny",
      "mkfs*": "deny",
      "format*": "deny"
    }
  }
}
